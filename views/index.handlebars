<h1>Eat-Da-Burger!</h1>

<div uk-grid>
  <div>
    <h2>Burgers that I have not devoured, yet.</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div>
    <h2>Burgers that I have devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<div uk-grid>
  <div class="uk-align-center uk-width-auto">
    <h2>Add a Burger</h2>

    <form class="create-form">
      <p><input class="uk-input" type="text" id="ca" name="name" placeholder="Burger Name"><p>
      <p><label><input class="uk-radio" type="radio" name="devoured" value="0" checked> Uneaten</label><br>
      <label><input class="uk-radio" type="radio" name="devoured" value="1"> Devoured</label></p>
      <button class="uk-button uk-button-default" type="submit">Add Burger</button>
    </form>

  </div>
</div>
