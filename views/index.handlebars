<h1>Eat-Da-Burger!</h1>

<div uk-grid>
  <div>
    <h2>Burgers that I have not devoured, yet.</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
  <div>
    <h2>Burgers that I have devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>

<div uk-grid>
  <div class="uk-align-center uk-width-auto">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Status?</label><br>
        <input type="radio" name="devoured" value="0" checked> Uneaten<br>
        <input type="radio" name="devoured" value="1"> Devoured
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
